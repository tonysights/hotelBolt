<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <attr name="app_skin_common_background" format="color|reference" />
    <attr name="app_skin_common_background_1" format="color|reference" />
    <attr name="app_skin_common_img_tint_color" format="color|reference" />
    <attr name="app_skin_home_text_color" format="color|reference" />
    <attr name="app_skin_common_title_text_color" format="color|reference" />
    <attr name="app_skin_common_desc_text_color" format="color|reference" />
    <attr name="app_skin_btn_test_bg" format="color|reference" />
    <attr name="app_skin_btn_test_border" format="color|reference" />
    <attr name="app_skin_btn_test_bg_single" format="color|reference" />
    <attr name="app_skin_btn_test_border_single" format="color|reference" />
    <attr name="app_skin_progress_bar_bg_color" format="color|reference" />
    <attr name="app_skin_progress_bar_progress_color" format="color|reference" />
    <attr name="app_skin_progress_bar_text_color" format="color|reference" />
    <attr name="app_skin_span_normal_text_color" format="color" />
    <attr name="app_skin_span_pressed_text_color" format="color" />
    <attr name="app_skin_span_normal_bg_color" format="color" />
    <attr name="app_skin_span_pressed_bg_color" format="color" />
    <attr name="app_skin_alpha_test" format="float" />


    <!--    我的页面用户头像-->
    <style name="profile_img_style">
        <item name="qmui_corner_radius">@dimen/profile_img_radius</item>
        <item name="android:layout_height">@dimen/profile_img_size</item>
        <item name="android:layout_weight">@dimen/profile_img_size</item>
    </style>

    <style name="title_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>


    <!--    Splash页计时按钮样式-->
    <style name="splash_timer_button">
        <item name="android:paddingEnd">@dimen/splash_page_roundButton_paddingH</item>
        <item name="android:paddingStart">@dimen/splash_page_roundButton_paddingH</item>
        <item name="android:paddingBottom">@dimen/splash_page_roundButton_paddingV</item>
        <item name="android:paddingTop">@dimen/splash_page_roundButton_paddingV</item>
    </style>


    <!--    登录页圆角按钮样式-->
    <style name="loginpage_round_button">
        <item name="cardCornerRadius">@dimen/login_page_roundButton_radius</item>
        <item name="android:layout_height">@dimen/login_page_roundButton_height</item>
        <item name="android:layout_weight">@dimen/login_page_roundButton_height</item>
        <item name="android:layout_marginTop">@dimen/login_page_roundButton_margin</item>
        <item name="android:layout_marginBottom">@dimen/login_page_roundButton_margin</item>
        <item name="android:clickable">true</item>
    </style>

    <!--    注册登录页面标题字体样式-->
    <style name="signInOrUp_textStyle">
        <item name="android:textSize">@dimen/login_page_textSize</item>
        <item name="android:textColor">@color/register_hint_textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="editText_loginOrRegister">
        <item name="android:layout_width">@dimen/login_account_editTextFrameWidth</item>
        <item name="android:layout_height">@dimen/login_account_editTextFrameSize</item>
        <item name="background">@drawable/shape_border_02</item>
        <item name="android:contextClickable">false</item>
        <item name="android:ems">10</item>
        <item name="fontFamily">monospace</item>
        <item name="paddingStart">@dimen/login_account_editTextPaddingStart</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textsize_content</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="AppTheme.Label.Title">
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">@dimen/textsize_title</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="second_title_hotelInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/baohei</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tab_title_style">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/yashihei</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="second_shortcut_hotelInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:textColor">@color/app_color_theme_11</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_subtitle_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/qmui_config_color_pure_black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="collapsing_collapsedStyle">
        <item name="android:textSize">23sp</item>
        <item name="font">@font/baohei</item>
        <item name="android:textColor">@color/qmui_config_color_white</item>
    </style>

    <style name="collapsing_expandedStyle">
        <item name="android:textColor">@color/qmui_config_color_transparent</item>
        <item name="android:visible">false</item>
    </style>

    <style name="action_menu_toolbar">
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/baohei</item>

    </style>

    <style name="style_appraise_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/thinkb</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
