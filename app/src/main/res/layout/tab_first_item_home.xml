<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        tools:context=".view.main.tab.FirstHomeTabFragment">

        <LinearLayout
            android:id="@+id/selection"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.25"
            android:clickable="true"
            android:focusable="auto"
            android:foreground="@drawable/selector_sample_press"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="@string/text_pics"
                app:srcCompat="@mipmap/ht_selection" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:fontFamily="@font/yashihei"
                android:gravity="center"
                android:text="@string/text_selected" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.25"
            android:clickable="true"
            android:focusable="auto"
            android:foreground="@drawable/selector_sample_press"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="@string/text_pics"
                app:srcCompat="@mipmap/ht_recommend" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/yashihei"
                android:gravity="center"
                android:text="@string/text_recommend" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.25"
            android:clickable="true"
            android:focusable="auto"
            android:foreground="@drawable/selector_sample_press"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="@string/text_pics"
                app:srcCompat="@mipmap/ht_scene" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/yashihei"
                android:gravity="center"
                android:text="@string/sp_att_scenic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.25"
            android:clickable="true"
            android:focusable="auto"
            android:foreground="@drawable/selector_sample_press"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@mipmap/ht_hotel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/yashihei"
                android:gravity="center"
                android:text="@string/text_hotels" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.25"
            android:clickable="true"
            android:focusable="auto"
            android:foreground="@drawable/selector_sample_press"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="@string/text_pics"
                app:srcCompat="@mipmap/ht_order" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/yashihei"
                android:gravity="center"
                android:text="@string/book_tabBar" />
        </LinearLayout>



    </com.qmuiteam.qmui.layout.QMUILinearLayout>
</layout>