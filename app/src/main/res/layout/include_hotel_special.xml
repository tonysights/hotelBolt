<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sp_title"
        style="@style/second_title_hotelInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_sp_equip"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/second_shortcut_hotelInfo"
        android:text="@string/hint_learnAll"

        app:layout_constraintBottom_toBottomOf="@+id/sp_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sp_title" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sp_title">

        <LinearLayout
            android:id="@+id/linearLayout14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView2
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sp_swimpool"
                    app:qmui_border_color="@color/qmui_config_color_gray_9"
                    app:qmui_border_width="0.5dp"
                    app:qmui_corner_radius="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:maxLines="1"
                    android:text="@string/sp_swimpool"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView2
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sp_room_service_blue_24dp"
                    app:qmui_border_color="@color/qmui_config_color_gray_9"
                    app:qmui_border_width="0.5dp"
                    app:qmui_corner_radius="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:maxLines="1"
                    android:text="@string/sp_hotel_restaurant"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView2
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sp_vip"
                    app:qmui_border_color="@color/qmui_config_color_gray_9"
                    app:qmui_border_width="0.5dp"
                    app:qmui_corner_radius="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:maxLines="1"
                    android:text="@string/sp_vip"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView2
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sp_room_service_blue_24dp"
                    app:qmui_border_color="@color/qmui_config_color_gray_1"
                    app:qmui_border_width="2dp"
                    app:qmui_corner_radius="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:maxLines="1"
                    android:text="@string/sp_room_service"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView2
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sp_wifi_blue_24dp"
                    app:qmui_border_color="@color/qmui_config_color_gray_9"
                    app:qmui_border_width="0.5dp"
                    app:qmui_corner_radius="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:maxLines="1"
                    android:text="@string/sp_free_wifi"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView2
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:backgroundTint="@color/app_color_theme_11"
                    android:backgroundTintMode="add"
                    android:src="@drawable/sp_gym_blue"
                    app:qmui_border_color="@color/qmui_config_color_gray_9"
                    app:qmui_border_width="0.5dp"
                    app:qmui_corner_radius="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:maxLines="1"
                    android:text="@string/sp_gym"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/divider9"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView20"
        style="@style/second_title_hotelInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_pics"
        app:layout_constraintStart_toStartOf="@+id/sp_title"
        app:layout_constraintTop_toBottomOf="@+id/divider9" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/city_eve"
            app:qmui_corner_radius="5dp" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/city_eve"
            app:qmui_corner_radius="5dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView21"
        style="@style/second_shortcut_hotelInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_learnAll"
        app:layout_constraintBottom_toBottomOf="@+id/textView20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView20" />

    <View
        android:id="@+id/divider10"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/textView22"
        style="@style/second_title_hotelInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sp_roomType"
        app:layout_constraintStart_toStartOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/divider10" />

    <TextView
        android:id="@+id/textView23"
        style="@style/second_shortcut_hotelInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_learnAll"
        app:layout_constraintBottom_toBottomOf="@+id/textView22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView22" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22">

        <com.qmuiteam.qmui.layout.QMUILinearLayout

            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="5dp"
            android:background="@color/qmui_config_color_pressed"
            android:clickable="true"
            android:focusable="auto"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/roomtype_room" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roomtype_room" />
        </com.qmuiteam.qmui.layout.QMUILinearLayout>

        <com.qmuiteam.qmui.layout.QMUILinearLayout

            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:background="@color/qmui_config_color_pressed"
            android:clickable="true"
            android:focusable="auto"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/roomtype_suite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roomtype_suite" />
        </com.qmuiteam.qmui.layout.QMUILinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/divider11"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


</androidx.constraintlayout.widget.ConstraintLayout>